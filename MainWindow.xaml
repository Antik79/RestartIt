<Window x:Class="RestartIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RestartIt - Application Monitor" 
        Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Status Colors (not themeable) -->
        <SolidColorBrush x:Key="SuccessGreen" Color="#28A745"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#DC3545"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFC107"/>

        <!-- Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#40000000" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="12" 
                          Opacity="0.15"/>
        
        <DropShadowEffect x:Key="ButtonShadow" 
                          Color="#40000000" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Opacity="0.12"/>

        <!-- Modern Primary Button with Gradient and Shadow -->
        <Style x:Key="ModernPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource ButtonShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBlueHover}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#50000000" 
                                            Direction="270" 
                                            ShadowDepth="3" 
                                            BlurRadius="10" 
                                            Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBlueHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Secondary Button -->
        <Style x:Key="ModernSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Centered Text Style -->
        <Style x:Key="CenteredTextColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
            <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Modern Toolbar with Card -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}"
                Padding="20,14"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="AddProgramButton" 
                        Grid.Column="0"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,10,0"
                        Click="AddProgram_Click"
                        Content="➕ Add Program"/>

                <Button x:Name="RemoveButton" 
                        Grid.Column="1"
                        Style="{StaticResource ModernSecondaryButton}"
                        Margin="0,0,10,0"
                        Click="RemoveProgram_Click"
                        Content="Remove"/>

                <Button x:Name="ExportLogsButton" 
                        Grid.Column="2"
                        Style="{StaticResource ModernSecondaryButton}"
                        Margin="0,0,10,0"
                        Click="ExportLogs_Click"
                        Content="Export Logs"/>

                <Button x:Name="SettingsButton" 
                        Grid.Column="3"
                        Style="{StaticResource ModernSecondaryButton}"
                        Click="Settings_Click"
                        Content="Settings"/>

                <!-- Status Badge -->
                <Border Grid.Column="5" 
                        Background="{DynamicResource HighlightColor}"
                        CornerRadius="20"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="StatusIndicator" 
                                 Width="10" 
                                 Height="10" 
                                 Fill="White"
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" 
                                   Text="Monitoring Active" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Modern DataGrid in Card -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,12">
            <DataGrid x:Name="ProgramsDataGrid" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      Background="{DynamicResource SurfaceColor}"
                      BorderThickness="0"
                      RowHeight="52"
                      AlternatingRowBackground="{DynamicResource BackgroundColor}">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Enabled" Width="90">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Checked="EnabledCheckBox_Changed"
                                          Unchecked="EnabledCheckBox_Changed"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Program Name" 
                                        Binding="{Binding ProgramName}" 
                                        Width="180" 
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource CenteredTextColumn}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Path" 
                                        Binding="{Binding ExecutablePath}" 
                                        Width="*" 
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource CenteredTextColumn}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Interval (sec)" 
                                        Binding="{Binding CheckIntervalSeconds}" 
                                        Width="140" 
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource CenteredTextColumn}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Delay (sec)" 
                                        Binding="{Binding RestartDelaySeconds}" 
                                        Width="140" 
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource CenteredTextColumn}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Status" Width="130">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="16,0">
                                    <Ellipse Width="10" 
                                             Height="10" 
                                             Margin="0,0,8,0" 
                                             VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{DynamicResource SecondaryTextColor}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessGreen}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                        <Setter Property="Fill" Value="{StaticResource ErrorRed}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Restarting">
                                                        <Setter Property="Fill" Value="{StaticResource WarningYellow}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Status}" 
                                               VerticalAlignment="Center" 
                                               FontSize="{DynamicResource AppFontSize}"
                                               Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="⚙ Edit" 
                                        Padding="10,6" 
                                        FontSize="{DynamicResource AppFontSize}"
                                        Click="EditProgram_Click"
                                        Margin="12,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ModernSecondaryButton}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="10,6"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Modern Log Panel with Card -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource BackgroundColor}"
                        Padding="20,14"
                        CornerRadius="10,10,0,0">
                    <Grid>
                        <TextBlock x:Name="ActivityLogText" 
                                   Text="Activity Log" 
                                   FontWeight="SemiBold" 
                                   FontSize="{DynamicResource AppFontSize}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextColor}"/>
                        <Button x:Name="ClearLogButton" 
                                HorizontalAlignment="Right" 
                                Padding="12,6"
                                Click="ClearLog_Click"
                                Content="Clear Log">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernSecondaryButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,6"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E8E8E8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Log Content -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              Padding="20"
                              Background="{DynamicResource SurfaceColor}">
                    <TextBlock x:Name="LogTextBlock" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextColor}"
                               LineHeight="20"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>