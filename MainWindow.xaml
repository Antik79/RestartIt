<Window x:Class="RestartIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RestartIt - Application Monitor" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredTextColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="White" BorderBrush="#d0d0d0" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="➕ Add Program" Style="{StaticResource ModernButton}" 
                        Margin="0,0,10,0" Click="AddProgram_Click"/>
                <Button Grid.Column="1" Content="Remove" Padding="15,8" Margin="0,0,10,0" 
                        Click="RemoveProgram_Click" Background="White" BorderBrush="#999" 
                        BorderThickness="1" Foreground="#333"/>
                <Button Grid.Column="2" Content="Export Logs" Padding="15,8" Margin="0,0,10,0" 
                        Click="ExportLogs_Click" Background="White" BorderBrush="#999" 
                        BorderThickness="1" Foreground="#333"/>
                <Button Grid.Column="3" Content="Settings" Padding="15,8" 
                        Click="Settings_Click" Background="White" BorderBrush="#999" 
                        BorderThickness="1" Foreground="#333"/>

                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="#28a745" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Monitoring Active" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Program List -->
        <DataGrid Grid.Row="1" x:Name="ProgramsDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderBrush="#d0d0d0"
                  BorderThickness="0,0,0,1"
                  RowHeight="45">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Enabled" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      Checked="EnabledCheckBox_Changed"
                                      Unchecked="EnabledCheckBox_Changed"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Program Name" Binding="{Binding ProgramName}" Width="150" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextColumn}"/>
                <DataGridTextColumn Header="Path" Binding="{Binding ExecutablePath}" Width="*" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextColumn}"/>
                <DataGridTextColumn Header="Check Interval (sec)" Binding="{Binding CheckIntervalSeconds}" Width="120" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextColumn}"/>
                <DataGridTextColumn Header="Restart Delay (sec)" Binding="{Binding RestartDelaySeconds}" Width="130" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextColumn}"/>

                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Margin="0,0,5,0" VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#999"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Running">
                                                    <Setter Property="Fill" Value="#28a745"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                    <Setter Property="Fill" Value="#dc3545"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Restarting">
                                                    <Setter Property="Fill" Value="#ffc107"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Actions" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="⚙ Edit" Padding="5" FontSize="11" 
                                    Click="EditProgram_Click" Background="Transparent" 
                                    BorderThickness="0" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Log Panel -->
        <Grid Grid.Row="2" Background="#fafafa">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#e8e8e8" BorderBrush="#d0d0d0" BorderThickness="0,1,0,1" Padding="10,5">
                <Grid>
                    <TextBlock Text="Activity Log" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                    <Button Content="Clear Log" HorizontalAlignment="Right" Padding="10,3" 
                            Click="ClearLog_Click" Background="Transparent" 
                            BorderBrush="#999" BorderThickness="1" FontSize="11"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                <TextBlock x:Name="LogTextBlock" 
                           FontFamily="Consolas" 
                           FontSize="10" 
                           TextWrapping="Wrap"
                           Background="White"
                           Padding="5"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>